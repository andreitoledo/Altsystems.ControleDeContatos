@{
    ViewData["Title"] = "Cadastrar Contatos";
}


    <h1 class="display-4">Cadastrar Contato</h1>

    <form>
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" placeholder="Digite o nome do contado">            
        </div>

        <div class="form-group">
            <label for="email">E-mail</label>
            <input type="email" class="form-control" placeholder="Digite o email do contado">            
        </div>

        <div class="form-group">
            <label for="celular">Celular</label>
            <input type="text" class="form-control" placeholder="Digite o celular do contato">            
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>

    </form>

