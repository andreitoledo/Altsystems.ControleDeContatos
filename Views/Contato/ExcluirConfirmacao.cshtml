@model Contato
@{
    ViewData["Title"] = "Listagem de Contatos";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Excluir">Confirmar exclusão</a>